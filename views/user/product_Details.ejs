<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Details</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f9f9fb;
      margin: 0;
    }
    .pd-wrap {
      margin: 40px auto;
      padding: 20px;
      max-width: 1200px;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }
    img {
      border: 2px solid #ddd;
      border-radius: 10px;
      padding: 5px;
    }
    .product-name h1 {
      font-size: 32px;
      margin-bottom: 10px;
      color: #222;
    }
    .product-price-discount span {
      font-size: 28px;
      font-weight: bold;
      color: #007bff;
    }
    .product-price-discount .line-through {
      font-size: 20px;
      color: #888;
      text-decoration: line-through;
    }
    .round-black-btn {
      background-color: #000;
      color: #fff;
      padding: 10px 30px;
      text-transform: uppercase;
      font-size: 16px;
      border-radius: 50px;
      transition: all 0.3s ease;
      display: inline-block;
      margin-top: 20px;
    }
    .round-black-btn:hover {
      background-color: #333;
    }
    .rate input[type="radio"] {
      display: none;
    }
    .rate label {
      color: #ccc;
      float: right;
      font-size: 20px;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    .rate input[type="radio"]:checked ~ label {
      color: #ffc107;
    }
    .reviews-counter {
      font-size: 14px;
      margin-top: 10px;
    }
    .product-count {
      margin-top: 20px;
    }
    .bottom-section {
      margin-top: 40px;
      padding: 20px;
      background-color: #f1f1f1;
      border-radius: 10px;
    }
    .review-section h3,
    .description-section h3 {
      margin-bottom: 20px;
    }
    .stock-info {
      margin-top: 20px;
      font-size: 18px;
      font-weight: bold;
    }
    .size-selection {
      margin-top: 20px;
    }
    .size-selection select {
      padding: 10px;
      font-size: 16px;
      border-radius: 5px;
      border: 1px solid #ddd;
    }
  </style>
</head>
<body>
<div class="pd-wrap">
  <div class="container">
    <div class="heading-section">
      <h2>Product Details</h2>
    </div>
    <div class="row">
      <!-- Image Section -->
      <div class="col-md-6">
        <div id="slider" class="owl-carousel product-slider">
          <% product.productImage.forEach((image) => { %>
            <div class="item">
              <img src="<%= image %>" alt="Product Image">
            </div>
          <% }) %>
        </div>
        <div id="thumb" class="owl-carousel product-thumb">
          <% product.productImage.forEach((image) => { %>
            <div class="item">
              <img src="<%= image %>" alt="Thumbnail">
            </div>
          <% }) %>
        </div>
      </div>
      
      <!-- Product Details Section -->
      <div class="col-md-6">
        <div class="product-dtl">
          <div class="product-info">
            <div class="product-name">
              <h1><%= product.productName %></h1>
            </div>
            <div class="reviews-counter">
              <div class="rate">
                <input type="radio" id="star5" name="rate" value="5">
                <label for="star5" title="5 stars">★</label>
                <input type="radio" id="star4" name="rate" value="4">
                <label for="star4" title="4 stars">★</label>
                <input type="radio" id="star3" name="rate" value="3">
                <label for="star3" title="3 stars">★</label>
                <input type="radio" id="star2" name="rate" value="2">
                <label for="star2" title="2 stars">★</label>
                <input type="radio" id="star1" name="rate" value="1">
                <label for="star1" title="1 star">★</label>
              </div>
              <span>(3 Reviews)</span>
            </div>
            <div class="product-price-discount">
              <span id="currentPrice">₹<%= product.combos[0].salePrice %></span>
              <span id="regularPrice" class="line-through">₹<%= product.combos[0].regularPrice %></span>
            </div>
          </div>
          <p><%= product.description || 'No description available.' %></p>
          <div class="stock-info" id="quantityStatus">
            Stock:  <%= product.combos[0].quantity %>
          </div>
          <div class="product-count">
            <label for="quantity">Quantity</label>
            <div class="display-flex">
              <div class="qtyminus">-</div>
              <input type="text" name="quantity" value="1" class="qty">
              <div class="qtyplus">+</div>
            </div>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-md-12 text-center">
                <button class="btn btn-primary" id="addToCartDummy">Add to Cart</button>
              </div>
          <div class="details__size flex">
            <ul class="size__list">
              <h5>Size</h5>
                <% product.combos.forEach((combo, index) => { %>
                  <button
                    type="button"
                    data-product-id="<%= product._id %>"
                    data-combos-id="<%= combo._id %>"
                    data-size="<%= combo.Size %>"
                    class="size__link <%= index === 0 ? 'size__link size-active' : 'size__link' %> combo-option"
                    aria-label="Select combo: <%= combo.Size %>"
                    onclick="selectCombo(this)"
                  >
                    <%= combo.Size %>
                  </button>
                <% }); %>
              
            </ul>
          </div>
        
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Description and Reviews Section -->
    <div class="bottom-section">
      <div class="description-section">
        <h3>Product Description</h3>
        <p><%= product.longDescription || 'No additional description available.' %></p>
      </div>
      <div class="review-section">
        <h3>Customer Reviews</h3>
        <p><%= product.reviews || 'No reviews yet.' %></p>
      </div>
    </div>
  </div>
</div>
<!-- Add to Cart Dummy Button -->


<script src="../../admin.js/size.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
<script>
  $('#slider').owlCarousel({
    items: 1,
    loop: true,
    autoplay: true,
    dots: true,
  });
  $('#thumb').owlCarousel({
    items: 4,
    margin: 10,
    dots: true,
    autoplay: true,
  });
</script>
</body>
</html>