  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f7f7f7;
      margin: 0;
      padding: 0;
    }
    .breadcrumbs {
      background-color: #ffe5d9;
      padding: 10px 20px;
      border-bottom: 1px solid #e4c9c0;
    }
    .breadcrumbs a {
      text-decoration: none;
      color: #1b4332;
      margin: 0 5px;
    }
    .breadcrumbs a:hover {
      text-decoration: underline;
    }
    .breadcrumbs span {
      color: #6c757d;
    }
    .container {
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 30px 20px;
      gap: 40px;
    }
    .sidebar {
      width: 200px;
      background-color: #d8f3dc;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 15px;
    }
    .sidebar a {
      display: block;
      padding: 10px;
      margin: 10px 0;
      color: #1b4332;
      text-decoration: none;
      border-radius: 5px;
    }
    .sidebar a:hover {
      background-color: #95d5b2;
    }
    .profile-card {
      flex: 1;
      max-width: 600px;
      background-color: #b7e4c7;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 30px;
      text-align: center;
    }
    .profile-card img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      border: 4px solid #40916c;
      margin-bottom: 20px;
    }
    .profile-card h2 {
      margin-top: 0;
      margin-bottom: 20px;
      font-size: 24px;
      color: #1b4332;
    }
    .profile-card p {
      margin: 15px 0;
      color: #081c15;
      font-size: 16px;
    }
    .profile-card button {
      margin-top: 20px;
      margin-right: 15px;
      padding: 12px 25px;
      background-color: #40916c;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 14px;
      cursor: pointer;
    }
    .profile-card button:hover {
      background-color: #1b4332;
    }
    .address-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .address-container h2 {
            margin-bottom: 10px;
        }
        .address-container-scroll {
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    width: 500px; 
    height: 300px; 
    overflow: auto; 
}

  </style>
</head>
<body>
  <div class="breadcrumbs">
    <a href="#">Home</a> &gt; 
    <a href="#">Profile</a> &gt; 
    <span>Account</span>
  </div>
  <div class="container">
    <div class="sidebar">
      <a href="/profile/<%=user._id%>">Dashboard</a>
      <a href="/address">My Address</a>
      <a href="/Orders">Orders</a>
      <a href="#">Wallet Status</a>
      <a href="#">Wallet History</a>
      <a href="#">Referrals</a>
      <a href="/logout">Logout</a>
    </div>
    <div class="profile-card">
        <%if (addressData){%>
            <div class="info-item address-container-scroll" >
               
               

                    <% addressData.address.forEach((address)=> {%>
                        
                        <div class="address-container">
                          
                          <p ><i class="fas fa-map-marker-alt me-3"></i><strong>Address</strong></p>
                <p ></Address> <%= address.addressType%> ,<%= address.name%>,<%= address.city%>,<%= address.landMark%></p>
                <p ></Address><%= address.state%>,<%= address.pincode%> </p>
                <p class=""><%= address.phone%>,<%= address.altPhone%></Address></p>
                <button class="btn-edit"  ><a href="/editAddress?id=<%=address._id%>">edit address</a></button>
                <button class="btn-delete"><a href="/deletAddress?id=<%=address._id%>"  onclick="return confirm('Are you confirm delete this address ?')">delete address</a></button>
                <br>
                <br>
              </div>
            
            <%})%>
            <%}else {%>
                 <p>no adress</p>
                <%}%>
           
        </div>
        <button class="btn-addnewAddress"><a href="/addAddress"> add New Address</a></button>
        </div>
    </div>

    </div>
  </div>






   
