<%-include("../../views/partials/user/header")%>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
    body {
        background-color: #1f3747;
        color: #343a40;
    }

    .product-cart-wrap {
        border: 1px solid #1a1919;
        border-radius: 10px;
        overflow: hidden;
        background-color: #e5e2eb;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        height: 100%;
    }

    .product-cart-wrap:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .product-img-action-wrap {
        position: relative;
        height: auto;
    }

    .product-img-zoom img {
        transition: transform 0.3s ease;
        object-fit: cover;
        width: 100%;
        height: 15rem;
    }

    .product-img-zoom:hover img {
        transform: scale(1.05);
    }

    .wishlist-btn {
        background-color: rgba(0, 0, 0, 0.3);
        border-radius: 50%;
        padding: 10px;
        color: #fff;
        position: absolute;
        top: 10px;
        left: 10px;
        transition: background-color 0.3s ease;
    }

    .wishlist-btn:hover {
        background-color: #ff407b;
    }

    .product-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #343a40;
    }

    .product-price {
        font-size: 1.2rem;
        color: #28a745;
        font-weight: 700;
    }

    .product-size-color {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .product-content-wrap a {
        font-size: 1rem;
        font-weight: 600;
        color: #fff;
        background-color: #007bff;
        border-radius: 5px;
        padding: 10px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .product-content-wrap a:hover {
        background-color: #0056b3;
    }

    .hero__slider .hero__items {
        background-color: #e9ecef;
        height: 100%;
        background-position: center;
        background-size: cover;
    }

    .banner__item__pic img {
        width: 100%;
        object-fit: cover;
        max-height: 400px;
    }

    .product__filter .col-lg-3 {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .banner {
    padding: 60px 0;
    background: #f8f9fa;
}

.banner__item {
    position: relative;
    transition: transform 0.3s ease;
}

.banner__item:hover {
    transform: scale(1.02);
}

.banner__item__pic {
    height: 500px;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.banner__item__pic img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.banner__item__text {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    width: 100%;
}

.banner__item__text h2 {
    color: #fff;
    font-size: 2rem;
    margin-bottom: 20px;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
}

.primary-btn {
    padding: 12px 30px;
    background: #fff;
    color: #333;
    border-radius: 25px;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
}

.primary-btn:hover {
    background: #333;
    color: #fff;
}

@media (max-width: 992px) {
    .banner__item__pic {
        height: 400px;
    }
}
.hero-banner {
    position: relative;
    width: 100%;
    height: 500px;
    margin-bottom: 50px;
}

.hero-banner__image {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.hero-banner__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.hero-banner__content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: #fff;
    z-index: 2;
}

.hero-banner__content h1 {
    font-size: 3.5rem;
    margin-bottom: 20px;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
}

.hero-banner__content p {
    font-size: 1.5rem;
    margin-bottom: 30px;
}

.shop-now-btn {
    padding: 15px 40px;
    background: #fff;
    color: #333;
    text-decoration: none;
    border-radius: 30px;
    font-weight: bold;
    transition: all 0.3s ease;
}

.shop-now-btn:hover {
    background: #333;
    color: #fff;
}

@media (max-width: 768px) {
    .hero-banner {
        height: 400px;
    }
    
    .hero-banner__content h1 {
        font-size: 2.5rem;
    }
    
    .hero-banner__content p {
        font-size: 1.2rem;
    }
}
.banner-bg {
    background-color: #051a30;
}
</style>
<div class="hero-banner">
    <div class="hero-banner__image">
        <img src="../../img/bannerFinal.jpg" alt="Hero Banner">
    </div>
    <div class="hero-banner__content">
       
        <a href="/shop" class="shop-now-btn">Shop Now</a>
    </div>
</div>

<section class="banner spad banner-bg">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <!-- Left Image -->
            <div class="col-lg-6 p-4">
                <div class="banner__item text-center">
                    <div class="banner__item__pic">
                        <img src="../../img/shoepic.jpg" alt="Accessories">
                    </div>
                </div>
            </div>
            
            <!-- Right Image -->
            <div class="col-lg-6 p-4">
                <div class="banner__item text-center">
                    <div class="banner__item__pic">
                        <img src="img/banner/banner-3.jpg" alt="Shoes Spring 2030">
                    </div>
                    <div class="banner__item__text">
                        <h2>Shoes Spring 2025</h2>
                        <a href="#" class="primary-btn">Shop now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

       

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li data-filter=".new-arrivals">New Arrivals</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter">
            <% for (let i = 0; i < product.length; i++) { %>
                <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                    <div class="product-cart-wrap mb-4">
                        <div class="product-img-action-wrap position-relative">
                            <div class="product-img product-img-zoom">
                                <a href="/productDetails/<%= product[i]._id %>">
                                    <img class="img-fluid rounded" src="<%= product[i].productImage[0] %>" alt="<%= product[i].productName %>">
                                </a>
                            </div>
                            <a href="/productDetails/:productId<%= product[i]._id %>" class="wishlist-btn">
                                <i class="fas fa-heart"></i>
                            </a>
                        </div>
        
                        <div class="product-content-wrap text-center p-3">
                            <h6 class="product-name mb-2"><%= product[i].productName %></h6>
        
                            <% if (product[i].combos && product[i].combos.length > 0) { %>
                                <% for (let j = 0; j < product[i].combos.length; j++) { %>
                                    <h5 class="product-price mb-2">₹<%= product[i].combos[j].salePrice %></h5>
                                    <p class="product-size-color mb-1">Size: <%= product[i].combos[j].Size %></p>
                                    <p class="product-size-color mb-3">Colour: <%= product[i].combos[j].Colour %></p>

                                    <% break; %>
                                <% } %>
                            <% } else { %>
                                <h5 class="product-price mb-2">₹ Not Available</h5>
                            <% } %>
    
                            
                            <button class="btn btn-primary btn-sm w-100" onclick="addToCart('<%=product[i]._id%>','<%=product[i].combos[0]._id%>')" >Add to Cart</button>
                            
                        </div>
                    </div>
                </div>
            <% } %>
            
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="../../user.js/main.js"></script>
<%-include("../../views/partials/user/footer")%>
