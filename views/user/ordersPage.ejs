
<%-include("../../views/partials/user/header")%>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f7f7f7;
      margin: 0;
      padding: 0;
    }
    .breadcrumbs {
      background-color: #ffe5d9;
      padding: 10px 20px;
      border-bottom: 1px solid #e4c9c0;
    }
    .breadcrumbs a {
      text-decoration: none;
      color: #1b4332;
      margin: 0 5px;
    }
    .breadcrumbs a:hover {
      text-decoration: underline;
    }
    .breadcrumbs span {
      color: #6c757d;
    }
    .container {
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 30px 20px;
      gap: 40px;
    }
    .sidebar {
      width: 200px;
      background-color: #d8f3dc;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 15px;
    }
    .sidebar a {
      display: block;
      padding: 10px;
      margin: 10px 0;
      color: #1b4332;
      text-decoration: none;
      border-radius: 5px;
    }
    .sidebar a:hover {
      background-color: #95d5b2;
    }
    .profile-card {
      flex: 1;
      max-width: 600px;
      background-color: #b7e4c7;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 30px;
      text-align: center;
    }
    .profile-card img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      border: 4px solid #40916c;
      margin-bottom: 20px;
    }
    .profile-card h2 {
      margin-top: 0;
      margin-bottom: 20px;
      font-size: 24px;
      color: #1b4332;
    }
    .profile-card p {
      margin: 15px 0;
      color: #081c15;
      font-size: 16px;
    }
    .profile-card button {
      margin-top: 20px;
      margin-right: 15px;
      padding: 12px 25px;
      background-color: #40916c;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 14px;
      cursor: pointer;
    }
    .profile-card button:hover {
      background-color: #1b4332;
    }

    .address-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .address-container h2 {
            margin-bottom: 10px;
        }
        .address-container-scroll {
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
    width: 550px; 
    height: 300px; 
    overflow: auto; 
}
  </style>
</head>
<body>
  <div class="breadcrumbs">
    <a href="#">Home</a> &gt; 
    <a href="#">Profile</a> &gt; 
    <span>Account</span>
  </div>
  <div class="container">
    <div class="sidebar">
      <a href="/profile/<%=user._id%>">Dashboard</a>
      <a href="/address">My Address</a>
      <a href="/Orders">Orders</a>
      <a href="#">Wallet Status</a>
      <a href="#">Wallet History</a>
      <a href="#">Referrals</a>
      <a href="/logout">Logout</a>
    </div>
    <div class="profile-card">
      <div class="info-item address-container-scroll" >
         <div class="address-container">

            <div class="col-md-6">
                <div>
                    <h2 class="section-title">Order History</h2>
            
                    <% if (!orders || orders.length === 0) { %>
                        <div class="text-center p-4 border rounded bg-light ">
                            <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                            <p class="h5">No Orders Yet</p>
                            <p class="text-muted">Start shopping to see your orders here!</p>
                            <a href="/shop" class="btn btn-primary mt-3">
                                <i class="fas fa-store me-2"></i> Browse Shop
                            </a>
                        </div>
                    <% } else { %>
                        <div class="table-responsive" style="width: 450px;">
                            <table class="table table-striped table-hover align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Name</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach(order => { %>
                                        <% order.orderedItems.forEach(item => { %>
                                            <tr>
                                                <td><%= item.productName %></td>
                                                <td><%= item.quantity %></td>
                                                <td>â‚¹<%= item.totalPrice %></td>
                                                <td>
                                                    <span class="badge bg-<%= item.status === 'Delivered' ? 'success' : item.status === 'Pending' ? 'warning' : 'danger' %>">
                                                        <%= item.status %>
                                                    </span>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
            


         
    </div>     
    </div>
    </div>
      
    </div>
  </div>






   
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>





<%-include("../../views/partials/user/footer")%>