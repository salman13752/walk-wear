<%-include("../../views/partials/admin/header")%>

<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<link rel="stylesheet" href="../../css/editCategory.css" />

<div class="d-flex">
  <div class="sidebar">
    <h2 class="text-white">Admin Dashboard</h2>
    <a href="/admin">Dashboard</a>
    <a href="/admin/users">Users</a>
    <a
      id="live-dashboard-button"
      href="#"
      style="
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
      "
      >Categories</a
    >
    <a href="/admin/brands">Brands</a>
    <a href="/admin/addProducts">Add Products</a>
    <a href="/admin/products">Products</a>
    <a href="#">Settings</a>
    <a href="/admin/logout">Logout</a>
  </div>
  <div class="main-content flex-grow-1">
    <div class="container">
      <div class="category-management">
        <div class="text-center">
          <h1 class="my-4">Category Management</h1>
        </div>

        <div class="breadcrumb-container">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <a href="/admin">Dashboard</a>
              </li>
              <li class="breadcrumb-item">
                <a href="/admin/category">Category Management</a>
              </li>
              <li class="breadcrumb-item active" aria-current="page">
                Edit Category
              </li>
            </ol>
          </nav>
        </div>

        <h2 class="my-4 text-center">Edit Category</h2>
        <div class="d-flex justify-content-center">
          <form
            class="w-50"
            onsubmit="return editCategory('<%= category._id%>')"
          >
            <div class="mb-3">
              <label for="categoryName" class="form-label">Name:</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="categoryname"
                value="<%= category.name%>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="categoryDescription" class="form-label"
                >Description:</label
              >
              <input
                type="text"
                class="form-control"
                id="description"
                name="description"
                value="<%= category.description%>"
                required
              />
              <div
                id="description-error"
                class="error-message text-danger"
              ></div>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<footer>
  <div class="container text-center"></div>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Include jQuery before your script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="../../admin.js/editCategory.js"></script>
<%-include("../../views/partials/admin/footer")%>
