<%-include("../../views/partials/admin/header")%>
<link rel="stylesheet" href="/css/category.css" />

<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.css"
/>

<link rel="stylesheet" href="/css/admin/category.css" />

<div class="d-flex">
  <div class="sidebar">
    <h2 class="text-white">Admin Dashboard</h2>
    <a href="/admin">Dashboard</a>
    <a href="/admin/users">Users</a>
    <a href="/admin/category">Categories</a>
    <a
      id="live-dashboard-button"
      href="#"
      style="
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
      "
      >Brands</a
    >
    <a href="/admin/addProducts">Add Products</a>
    <a href="/admin/products">Products</a>
    <a href="#">Settings</a>
    <a href="/admin/logout">Logout</a>
  </div>
  <div class="main-content flex-grow-1">
    <div class="container">
      <div class="category-management">
        <div class="brand-management">
          <div class="text-center">
            <h1 class="my-4">Brands Management</h1>
          </div>
          <div class="breadcrumb-container">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">
                  <a href="/admin/dashboard">Dashboard</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                  Brands
                </li>
              </ol>
            </nav>
          </div>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-light">
                <tr>
                  <th>Name</th>
                  <th>Photo</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% brands.forEach(brand => { %>
                <tr>
                  <td><%= brand.brandName %></td>
                  <td>
                    <img
                      src="<%= brand.brandImage %>"
                      alt="<%= brand.name %>"
                      width="50"
                      height="50"
                    />
                  </td>
                  <td>
                    <form action="/admin/deleteBrand/<%= brand._id %>" method="POST" style="display: inline;">
                      <button type="submit" onclick="return confirm('Are you sure you want to delete this brand?')">Delete</button>
                    </form>
                  </td>
                  
                <% }); %>
              </tbody>
            </table>
            <% if (totalPages > 0) { %>
            <nav aria-label="Page navigation">
              <ul class="pagination justify-content-center">
                <% if (currentPage > 1) { %>
                <li class="page-item">
                  <a class="page-link" href="?page=<%= currentPage - 1 %>"
                    >Previous</a
                  >
                </li>
                <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
                <li
                  class="page-item <%= (i === currentPage) ? 'active' : '' %>"
                >
                  <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                </li>
                <% } %> <% if (currentPage < totalPages) { %>
                <li class="page-item">
                  <a class="page-link" href="?page=<%= currentPage + 1 %>"
                    >Next</a
                  >
                </li>
                <% } %>
              </ul>
            </nav>
            <% } %>
          </div>
        </div>

        <h2 class="my-4 text-center">Add New Brands</h2>
        <div class="d-flex justify-content-center">
          <form
            class="w-50"
            method="post"
            action="/admin/addBrands"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="categoryName" class="form-label">Name:</label>
              <input
                type="text"
                class="form-control"
                id="categoryName"
                name="name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="categoryPhoto" class="form-label">Photo:</label>
              <input
                type="file"
                class="form-control"
                id="brandPhoto"
                name="image"
                accept=".jpg, .jpeg, .png"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<footer>
  <div class="container text-center"></div>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Include jQuery before your script -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/cropperjs/dist/cropper.min.js"></script>

<%-include("../../views/partials/admin/footer")%>