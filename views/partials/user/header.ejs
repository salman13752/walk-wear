        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            body {
                font-family: Arial, sans-serif;
            }
            .navbar {
                display: flex;
                justify-content: space-between;
                align-items: center;
                background-color: #333;
                padding: 15px 30px;
                position: relative;
                z-index: 1000;
            }
            .navbar a {
                color: white;
                text-decoration: none;
                margin: 0 15px;
                font-size: 18px;
                transition: 0.3s;
            }
            .navbar a:hover {
                color: #000000;
            }
            .logo {
                font-size: 22px;
                font-weight: bold;
                color: white;
            }
            .logo img {
                width: 100px;
                height: auto;
            }
            .auth-buttons {
                display: flex;
                align-items: center;
                gap: 20px;
            }
            .auth-buttons a, .dropdown {
                background-color: #000000;
                border: none;
                padding: 10px 15px;
                color: white;
                font-size: 16px;
                cursor: pointer;
                border-radius: 5px;
                text-decoration: none;
                transition: 0.3s;
            }
            .auth-buttons a:hover, .dropdown:hover {
                background-color: #64605f;
            }
            .dropdown {
                position: relative;
                z-index: 1001;
            }
            .dropdown-content {
                display: none;
                position: absolute;
                right: 0;
                background-color: #f9f9f9;
                min-width: 120px;
                box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
                z-index: 1002;
                border-radius: 5px;
                overflow: hidden;
            }
            .dropdown:hover .dropdown-content {
                display: block;
            }
            .dropdown-content a {
                color: black;
                padding: 10px;
                text-decoration: none;
                display: block;
                background-color: white;
            }
            .dropdown-content a:hover {
                background-color: #ddd;
            }
            .banner {
                position: relative;
                z-index: 1;
            }

           
        </style>
    </head>
    <body>
        <nav class="navbar">
            <div class="logo">
                <a href="/"><img src="../../../img/logo main.png" alt="logo"></a>
            </div>
            <div>
                <a href="/">Home</a>
                <a href="/shop">Shop</a>
                <a href="#">Pages</a>
                <a href="/blog">Blog</a>
                <a href="/contact">Contact</a>
            </div>
            <div class="auth-buttons">
                <% if (locals.user) { %>
                    <div class="dropdown">
                        <a href="#" class="sign-in-link"><%= locals.user.name %> â–¼</a>
                        <div class="dropdown-content">
                            <a href="/profile/<%= locals.user._id %>">Profile</a>
                            <a href="/logout">Logout</a>
                        </div>
                    </div>
                    <a href="/cart">Cart</a>
                <% } else { %>
                    
                    <a href="/login">Log In</a>
                <% } %>
            </div>
        </nav>
        <script>
            window.onscroll = function() {
                let navbar = document.querySelector('.nav-bar');
                let content = document.querySelector('main');
                
                if (window.pageYOffset > 0) {
                    navbar.classList.add('sticky-nav');
                    content.classList.add('nav-padding');
                } else {
                    navbar.classList.remove('sticky-nav');
                    content.classList.remove('nav-padding');
                }
            };
            </script>
    </body>
    </html>
    